//----------------------------------------------------------
function lmcModelTemplate() {
  /* PURPOSE: provides a basic template with the right types for fields */
  return (LMCForm(lm       <- True                  
                , pc       <- 0                     
                , acc      <- 0                     
                , neg      <- True                 
                , inp      <- [0]                    
                , out      <- [0]                    
                , mbs      <- [[0]]
                , bounds   <- (0,0) 
                , wz       <- just(0)
                , iz       <- just(0)               
                , dz       <- just(0)               
                , contents <- 0                
         ))
}
